// HideArmor Admin Menu styled like Hytale Settings
// Three-column layout for configuring global defaults

$C = "../Common.ui";
$Container = "../Container.ui";

// Define the settings row macro
@SettingsRow = Group {
  Anchor: (Height: 40, Bottom: 6);
  Background: #1a2533;
  LayoutMode: Left;

  Label #Name {
    Anchor: (Left: 16);
    Style: (VerticalAlignment: Center, TextColor: #96a9be, RenderUppercase: false, FontSize: 15);
  }

  Group {
    FlexWeight: 1;
  }

  $C.@CheckBox #CheckBox {
    Anchor: (Width: 22, Height: 22, Right: 14);
  }
};

// Section header macro
@SectionHeader = Label {
  Anchor: (Bottom: 12);
  Style: (FontSize: 15, TextColor: #96a9be, RenderUppercase: true, RenderBold: true);
};

// Primary button style for action buttons
@SetupButtonStyle = TextButtonStyle(
  Default: (Background: #3a7b4f, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8b5f, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6b3f, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

// Language button style
@LangButtonStyle = TextButtonStyle(
  Default: (Background: #3a5068, LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a6078, LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a4058, LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 820, Height: 750);

    #Title {
      Group {
        $C.@Title #MainTitle {
          @Text = "Default & Forced Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Top: 15, Bottom: 15, Left: 20, Right: 20);

      Group {
         LayoutMode: Top;
         Anchor: (Width: 780, Height: 35);
         Label #DescriptionLabel {
             Text: "These settings will be applied to all new players or players who have not configured their preferences.";
             Style: (TextColor: #e0e0e0, FontSize: 14, Wrap: true);
             Anchor: (Bottom: 15);
         }
      }

      // Three Columns for Default Settings
      Group {
        LayoutMode: Left;
        Anchor: (Height: 250);
        
        // Left column: Hide Self Armor
        Group #LeftColumn {
          LayoutMode: Top;
          FlexWeight: 1;
          Padding: (Right: 10);
  
          @SectionHeader #SectionDefaultSelf { Text: "DEFAULT: HIDE SELF"; }
  
          @SettingsRow #HelmetSetting { #Name { Text: "Hide Helmet"; } }
          @SettingsRow #ChestSetting { #Name { Text: "Hide Chestplate"; } }
          @SettingsRow #GauntletsSetting { #Name { Text: "Hide Gauntlets"; } }
          @SettingsRow #LeggingsSetting { #Name { Text: "Hide Leggings"; } }
        }
  
        // Middle column: Hide Others
        Group #MiddleColumn {
          LayoutMode: Top;
          FlexWeight: 1;
          Padding: (Left: 5, Right: 5);
  
          @SectionHeader #SectionDefaultHideOthers { Text: "DEFAULT: HIDE OTHERS"; }
  
          @SettingsRow #HideOthersHelmetSetting { #Name { Text: "Hide Helmets"; } }
          @SettingsRow #HideOthersChestSetting { #Name { Text: "Hide Chestplates"; } }
          @SettingsRow #HideOthersGauntletsSetting { #Name { Text: "Hide Gauntlets"; } }
          @SettingsRow #HideOthersLeggingsSetting { #Name { Text: "Hide Leggings"; } }
        }
  
        // Right column: Allow Others
        Group #RightColumn {
          LayoutMode: Top;
          FlexWeight: 1;
          Padding: (Left: 10);
  
          @SectionHeader #SectionDefaultAllowOthers { Text: "DEFAULT: ALLOW OTHERS"; }
  
          @SettingsRow #AllowOthersHelmetSetting { #Name { Text: "Allow Helmet"; } }
          @SettingsRow #AllowOthersChestSetting { #Name { Text: "Allow Chest"; } }
          @SettingsRow #AllowOthersGauntletsSetting { #Name { Text: "Allow Gauntlets"; } }
          @SettingsRow #AllowOthersLeggingsSetting { #Name { Text: "Allow Leggings"; } }
        }
      }

      // Spacer
      Group { Anchor: (Height: 20); }

      // Forced Settings Section
      @SectionHeader #SectionForced { Text: "GLOBAL OVERRIDES (FORCE HIDE)"; }
      Label #ForceWarningLabel {
          Text: "Settings enabled here will be FORCED ON for all players inside the server, overriding any personal preference.";
          Style: (TextColor: #cc6666, FontSize: 14, Wrap: true);
          Anchor: (Bottom: 10, Width: 780);
      }

      Group {
        LayoutMode: Left;
        
        Group {
            LayoutMode: Top;
            FlexWeight: 1;
            Padding: (Right: 10);
            @SettingsRow #ForceHelmetSetting { #Name { Text: "Force Helmet"; } }
            @SettingsRow #ForceChestSetting { #Name { Text: "Force Chestplate"; } }
        }
        Group {
            LayoutMode: Top;
            FlexWeight: 1;
            Padding: (Left: 10);
            @SettingsRow #ForceGauntletsSetting { #Name { Text: "Force Gauntlets"; } }
            @SettingsRow #ForceLeggingsSetting { #Name { Text: "Force Leggings"; } }
        }
      }

      // Spacer
      Group { Anchor: (Height: 15); }

      // Permission Setup Section
      @SectionHeader #SectionQuickSetup { Text: "QUICK SETUP"; }
      Group #PermissionSetupRow {
        Anchor: (Height: 50);
        LayoutMode: Left;
        Background: #1a2533;

        Label #PermissionLabel {
          Anchor: (Left: 16);
          Text: "Add HideArmor permissions to Adventure group";
          Style: (VerticalAlignment: Center, TextColor: #96a9be, FontSize: 14);
        }

        Group { FlexWeight: 1; }

        TextButton #SetupPermissionsBtn {
          Text: "Setup Permissions";
          Anchor: (Width: 160, Height: 32, Right: 14);
          Style: @SetupButtonStyle;
        }
      }

      // Spacer
      Group { Anchor: (Height: 15); }

      // Language Selector Section
      @SectionHeader #SectionLanguage { Text: "DEFAULT LANGUAGE"; }
      Group #LanguageRow {
        Anchor: (Height: 45);
        LayoutMode: Left;
        Background: #1a2533;

        Label #LanguageLabel {
          Anchor: (Left: 16);
          Text: "Server default language";
          Style: (VerticalAlignment: Center, TextColor: #96a9be, FontSize: 14);
        }

        Group { FlexWeight: 1; }

        // Language buttons
        Group #LanguageButtons {
          LayoutMode: Left;
          Anchor: (Right: 14);
          
          TextButton #LangEnBtn {
            Text: "EN";
            Anchor: (Width: 42, Height: 30, Right: 5);
            Style: @LangButtonStyle;
          }
          TextButton #LangEsBtn {
            Text: "ES";
            Anchor: (Width: 42, Height: 30, Right: 5);
            Style: @LangButtonStyle;
          }
          TextButton #LangPtBtn {
            Text: "PT";
            Anchor: (Width: 42, Height: 30, Right: 5);
            Style: @LangButtonStyle;
          }
          TextButton #LangFrBtn {
            Text: "FR";
            Anchor: (Width: 42, Height: 30, Right: 5);
            Style: @LangButtonStyle;
          }
          TextButton #LangDeBtn {
            Text: "DE";
            Anchor: (Width: 42, Height: 30, Right: 5);
            Style: @LangButtonStyle;
          }
          TextButton #LangRuBtn {
            Text: "RU";
            Anchor: (Width: 42, Height: 30);
            Style: @LangButtonStyle;
          }
        }
      }

    }
  }
}

$C.@BackButton {}
