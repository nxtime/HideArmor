// HideArmor Main Menu UI
// Based on AdminUI's UI structure

$C = "../../../Common.ui";

$C.@PageOverlay {
  // Title bar with close button
  $C.@Container {
    Anchor: (Width: 400, Height: 300);

    #Title {
      Group {
        $C.@Title {
          @Text = "Armor Visibility";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Top: 10, Bottom: 10, Left: 20, Right: 20);

      Group #ArmorToggles {
        LayoutMode: Top;
        Padding: (Top: 5);

        // Helmet Toggle
        Group #HelmetToggle {
          LayoutMode: Left;
          Padding: (Bottom: 8);
          
          $C.@Checkbox #HelmetCheckbox {
            @Checked = false;
          }
          
          $C.@Text {
            @Text = "Helmet";
            Padding: (Left: 8);
          }
        }

        // Chestplate Toggle
        Group #ChestToggle {
          LayoutMode: Left;
          Padding: (Bottom: 8);
          
          $C.@Checkbox #ChestCheckbox {
            @Checked = false;
          }
          
          $C.@Text {
            @Text = "Chestplate";
            Padding: (Left: 8);
          }
        }

        // Gauntlets Toggle
        Group #GauntletsToggle {
          LayoutMode: Left;
          Padding: (Bottom: 8);
          
          $C.@Checkbox #GauntletsCheckbox {
            @Checked = false;
          }
          
          $C.@Text {
            @Text = "Gauntlets";
            Padding: (Left: 8);
          }
        }

        // Leggings Toggle
        Group #LeggingsToggle {
          LayoutMode: Left;
          Padding: (Bottom: 8);
          
          $C.@Checkbox #LeggingsCheckbox {
            @Checked = false;
          }
          
          $C.@Text {
            @Text = "Leggings";
            Padding: (Left: 8);
          }
        }

        // Separator
        Group #Separator {
          Anchor: (Height: 1);
          Padding: (Top: 10, Bottom: 10);
          $C.@Divider {}
        }

        // All Armor Toggle
        Group #AllArmorToggle {
          LayoutMode: Left;
          
          $C.@Checkbox #AllArmorCheckbox {
            @Checked = false;
          }
          
          $C.@Text {
            @Text = "Hide All Armor";
            @Bold = true;
            Padding: (Left: 8);
          }
        }
      }
    }
  }
}

$C.@BackButton {}
